#отправка сообщения
def send1():
    global mess
    Mss.insert(INSERT,'\n' +Mess.get(1.0, END))
    mess = Mess.get(1.0,END)
    Mess.delete(1.0,END)

def send2(event):
    global mess
    Mss.insert(INSERT,'\n'+Mess.get(1.0,END))
    mess = Mess.get(1.0, END)
    Mess.delete(1.0, END)


