root1 = Tk()
root1.title("Messenger")
root1.geometry(str(root1.winfo_screenwidth()-100)+'x'+str(root1.winfo_screenheight()-100)+'+0+0')
w=root1.winfo_screenwidth()-100
h=root1.winfo_screenheight()-100
